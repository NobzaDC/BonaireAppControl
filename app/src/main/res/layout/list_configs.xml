<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_list_configs"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="12dp"
                android:layout_marginVertical="8dp"
                android:layout_marginRight="8dp"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/txt_title_list_configs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/img_list_configs"
                android:text="CONFIGURACIONES"
                android:textAlignment="viewStart"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_description_list_configs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_title_list_configs"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/img_list_configs"
                android:text="Descripcion configuracion" />

            <TextView
                android:id="@+id/txt_divider_list_configs"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="8dp"
                android:background="#979595" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>