<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ccc"
    tools:context=".ui.grafics.graficsFragment">

    <RelativeLayout
        android:id="@+id/RelativeLayoutDevicesGrafics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingRight="3dp">

        <ImageView
            android:id="@+id/imageView2Grafics"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/logo_bonaire_app_sin_rs" />


    </RelativeLayout>
    <View
        android:id="@+id/divider2Grafics"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/RelativeLayoutDevicesGrafics"
        android:background="?android:attr/listDivider" />
    <ListView
        android:id="@+id/list_view_devicesGrafics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RelativeLayoutDevicesGrafics"
        android:animateLayoutChanges="true"
        android:visibility="invisible"
        android:layout_marginBottom="70dp">
    </ListView>

    <ImageView
        android:id="@+id/image_backgroud_devicesGrafics"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/divider2Grafics"
        app:srcCompat="@drawable/img_p_agregar" />

    <ProgressBar
        android:id="@+id/progressBarGrafics"
        style="?android:attr/progressBarStyle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txt_pruebaGrafics"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/divider2Grafics"/>



</RelativeLayout>