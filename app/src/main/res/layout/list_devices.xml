<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <ImageView
                android:id="@+id/img_card_view_list_devices"
                android:layout_width="80dp"
                android:layout_alignParentTop="true"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txt_last_report_list_device"
                tools:srcCompat="@drawable/bqd" />

            <TextView
                android:id="@+id/txt_location_data_list_device"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_card_view_list_devices"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:text="EQUIPO BONAIRE BQ-600"
                android:textSize="24sp"
                android:padding="5dp"
                android:textAlignment="center"/>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:layout_below="@id/txt_location_data_list_device"
                android:layout_toRightOf="@+id/img_card_view_list_devices"/>

            <TextView
                android:id="@+id/txt_status_device_list_devices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_card_view_list_devices"
                android:layout_below="@+id/txt_location_data_list_device"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="Estado:"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textAlignment="textStart"/>

            <TextView
                android:id="@+id/txt_status_data_device_list_devices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txt_status_device_list_devices"
                android:layout_below="@+id/txt_location_data_list_device"
                android:textColor="#000000"
                android:text=" - "
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="3dp"
                android:textAlignment="textStart"/>

            <TextView
                android:id="@+id/txt_last_report_list_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_location_list_device"
                android:text="Último reporte: "
                android:textAlignment="textStart"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_last_report_data_list_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txt_last_report_list_device"
                android:layout_below="@+id/txt_location_list_device"
                android:textColor="#000000"
                android:text="AAAA-MM-DD HH:MM"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:layout_marginLeft="3dp"
                android:textAlignment="textStart"/>

            <TextView
                android:id="@+id/txt_location_list_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_card_view_list_devices"
                android:layout_below="@+id/txt_status_data_device_list_devices"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="Id: "
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textAlignment="textStart"/>

            <TextView
                android:id="@+id/txt_title_device_list_devices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txt_location_list_device"
                android:layout_below="@+id/txt_status_data_device_list_devices"
                android:textColor="#000000"
                android:text=" - "
                android:textSize="10sp"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="3dp"
                android:textAlignment="textStart"/>

            <TextView
                android:id="@+id/txt_conection_type_list_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_last_report_list_device"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="8dp"
                android:textSize="12dp"
                android:layout_marginTop="5dp"
                android:textAlignment="textEnd"
                android:text="sin conexión "/>

            <TextView
                android:id="@+id/txt_type_device_list_device"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_last_report_list_device"
                android:layout_toLeftOf="@+id/txt_conection_type_list_device"
                android:textSize="12dp"
                android:layout_marginTop="5dp"
                android:textAlignment="viewStart"
                android:text=" - "/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>




