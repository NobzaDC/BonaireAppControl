<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:elevation="8dp"
        android:layout_margin="18dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <TextView
                android:id="@+id/txt_title_list_sensores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:text="Sensores Bonaire tech"/>
            <TextView
                android:id="@+id/divider_txt_title_list_sensores"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black"
                android:layout_below="@+id/txt_title_list_sensores"/>

            <TextView
                android:id="@+id/txt_last_report_list_sensores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider_txt_title_list_sensores"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Ãšltimo reporte: "
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_last_report_data_list_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txt_last_report_list_sensores"
                android:layout_below="@+id/divider_txt_title_list_sensores"
                android:textColor="#000000"
                android:text="AAAA-MM-DD HH:MM"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="3dp"
                android:textAlignment="textStart"/>

            <TextView
                android:id="@+id/txt_value_reported_list_sensores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_last_report_list_sensores"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="Valor reportado: "
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textAlignment="textStart"/>

            <TextView
                android:id="@+id/txt_data_value_reported_list_sensores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txt_value_reported_list_sensores"
                android:layout_below="@+id/txt_last_report_list_sensores"
                android:textColor="#000000"
                android:text=" - "
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="3dp"
                android:textAlignment="textStart"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>