<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccc"
    tools:context=".configs_activity.settings_activity">

    <ImageView
        android:id="@+id/iv_logo_settings"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@drawable/logo_bonaire_app_sin_rs"
        android:background="@android:color/white"/>

    <TextView
        android:id="@+id/divider_logo_settings"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_below="@+id/iv_logo_settings"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/divider_logo_settings"/>
</RelativeLayout>